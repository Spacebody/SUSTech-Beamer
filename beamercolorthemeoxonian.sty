% Dictates which colours are used
\ProvidesPackage{beamercolorthemeoxonian}

\mode<presentation>
% Define Colours
% from http://www.sustc.edu.cn/biaozhi
\definecolor{SUSTechblue}{RGB}{0,32,68}
\definecolor{SUSTechDarkGreen}{RGB}{0,63,67} %南科大墨绿
\definecolor{SUSTechAzure}{RGB}{43,183,179} %南科大天青
\definecolor{SUSTechOrange}{RGB}{237,108,0} %南科大橙
\definecolor{glassgrey}{rgb}{220,220,220}

% Set Colours
\setbeamercolor{title}{parent=SUSTechblue}
\setbeamercolor{title}{fg=SUSTechblue}
\setbeamercolor{subtitle}{parent=SUSTechblue}
\setbeamercolor{author}{parent=glassgrey}
\setbeamercolor{date}{parent=SUSTechblue}
\setbeamercolor{institute}{parent=SUSTechblue}

\setbeamercolor{section title}{parent=SUSTechblue}
\setbeamercolor{subsection title}{parent=SUSTechblue}
\setbeamercolor{frametitle}{parent=SUSTechblue}
\setbeamercolor{background canvas}{parent=SUSTechblue}
\setbeamercolor{structure}{fg=SUSTechblue}

\setbeamercolor{normal text}{fg=black!97}

\setbeamercolor{footnote}{fg=black!97}
\setbeamercolor{page number in head/foot}{fg=SUSTechblue}

\mode
<all>